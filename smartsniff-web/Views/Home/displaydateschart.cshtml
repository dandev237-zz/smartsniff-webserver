@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Smartsniff - Chart</title>
    <!-- jquery -->
    <script type="text/javascript" src="~/js/jquery-3.1.0.min.js"></script>
    <!-- fusioncharts -->
    <script type="text/javascript" src="~/js/fusioncharts.js"></script>
    <script type="text/javascript" src="~/js/fusioncharts.charts.js"></script>
    <script type="text/javascript" src="~/js/fusioncharts-jquery-plugin.min.js"></script>
    <!-- moment.js -->
    <script type="text/javascript" src="~/js/moment-with-locales.js"></script>
</head>
<body>
    <div id="chart-container">
        No data to display
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            var param = window.location.hash;
            param = param.substring(1);

            var date = param.split('/');
            var from = date[0].substring(0, 10);
            var to = date[1].substring(0, 10);

            //Reorganize strings
            var fromTokens = from.split('-');
            from = fromTokens[2] + "/" + fromTokens[1] + "/" + fromTokens[0];

            var toTokens = to.split('-');
            to = toTokens[2] + "/" + toTokens[1] + "/" + toTokens[0];

            $.getJSON("/api/db/getstatisticsdata/" + window.date, function (json, status) {
                if (status == "success") {
                    $("#chart-container").insertFusionCharts({
                        id: 'dates-chart',
                        type: 'bar2d',
                        renderAt: 'chart-container',
                        width: '700',
                        height: '700',
                        dataFormat: 'json',
                        dataSource: {
                            "chart": {
                                "caption": "Daily devices detected",
                                "subCaption": from + " - " + to.toString(),
                                "yAxisName": "Number of devices",
                                "paletteColors": "#0075c2",
                                "bgColor": "#ffffff",
                                "showBorder": "1",
                                "showCanvasBorder": "1",
                                "usePlotGradientColor": "0",
                                "plotBorderAlpha": "10",
                                "placeValuesInside": "1",
                                "valueFontColor": "#ffffff",
                                "showAxisLines": "1",
                                "axisLineAlpha": "25",
                                "divLineAlpha": "10",
                                "alignCaptionWithCanvas": "0",
                                "showAlternateVGridColor": "0",
                                "captionFontSize": "14",
                                "subcaptionFontSize": "14",
                                "subcaptionFontBold": "0",
                                "toolTipColor": "#ffffff",
                                "toolTipBorderThickness": "0",
                                "toolTipBgColor": "#000000",
                                "toolTipBgAlpha": "80",
                                "toolTipBorderRadius": "2",
                                "toolTipPadding": "5"
                            },
                            "data": json[3]['statDataArray']
                        }
                    });
                }
            })
        })
    </script>
</body>
</html>